{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lint: shellcheck",
      "type": "shell",
      "command": "make lint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "format: shfmt",
      "type": "shell",
      "command": "make format",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "format: check",
      "type": "shell",
      "command": "make format-check",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "install: dotfiles",
      "type": "shell",
      "command": "make install",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
